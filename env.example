# Greenbeam API Configuration
# Copy this file to .env.local and update the values

# API Configuration
NEXT_PUBLIC_API_URL=https://greenbeam-backend.onrender.com/api/v1
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Authentication Configuration
NEXT_PUBLIC_TOKEN_EXPIRY_BUFFER=300000

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_MAX_FILES_PER_UPLOAD=10
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Pagination Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_MAX_CACHE_SIZE=100

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Development Configuration
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_API_LOGGING=true
NEXT_PUBLIC_MOCK_API_DELAY=500 